{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/debug",
      "dest": "/api/debug.js"
    },
    {
      "src": "/api/people/search",
      "dest": "/api/search.js"
    },
    {
      "src": "/api/people/(.*)",
      "dest": "/api/people.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 