{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { 
      "src": "/api/people",
      "dest": "/api/people.js",
      "methods": ["GET"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/api/people/search",
      "dest": "/api/search.js",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/api/people/([^/]+)",
      "dest": "/api/person.js?id=$1",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/api/events/year/([^/]+)",
      "dest": "/api/eventsByYear.js?year=$1",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/api/events/age/([^/]+)",
      "dest": "/api/eventsByAge.js?age=$1",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/api/auth/(register|login|me)",
      "dest": "/api/auth.js",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/health",
      "dest": "/api/health.js",
      "methods": ["GET"]
    },
    { 
      "src": "/api/debug",
      "dest": "/api/debug.js",
      "methods": ["GET"]
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { "src": "^/static/(.*)", "dest": "/build/static/$1" },
    { "src": "^/favicon.ico", "dest": "/build/favicon.ico" },
    { "src": "^/manifest.json", "dest": "/build/manifest.json" },
    { "src": "^/asset-manifest.json", "dest": "/build/asset-manifest.json" },
    { "src": "^/(.*)\\.png", "dest": "/build/$1.png" },
    { "src": "^/(.*)\\.jpg", "dest": "/build/$1.jpg" },
    { "src": "^/(.*)\\.js", "dest": "/build/$1.js" },
    { "src": "^/(.*)\\.css", "dest": "/build/$1.css" },
    { "src": "^/(.*)", "dest": "/build/index.html" }
  ]
} 